{
  "name": "functions",
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts}'",
    "build": "npm run lint && tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "jest",
    "dbreset": "firebase firestore:delete --all-collections",
    "dbreset:publishers": "firebase firestore:delete -y --shallow publishers",
    "dbseed": "npm run dbseed:publishers",
    "dbseed:publishers": "node lib/commands/dbseed.js publishers seeds/publishers.tsv",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "commander": "^4.0.1",
    "csv-parse": "^4.8.2",
    "date-fns": "^2.8.1",
    "date-fns-timezone": "^0.1.4",
    "firebase": "^7.5.2",
    "firebase-admin": "^8.0.0",
    "firebase-functions": "^3.1.0",
    "lodash": "^4.17.15",
    "node-fetch": "^3.1.1",
    "puppeteer": "^2.0.0"
  },
  "devDependencies": {
    "@types/eslint": "^6.1.1",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.14",
    "@types/node-fetch": "^2.5.4",
    "@types/prettier": "^1.18.2",
    "@types/puppeteer": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prefer-arrow": "^1.1.6",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.3"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts?|js?)$",
    "moduleFileExtensions": [
      "ts",
      "json",
      "js"
    ]
  }
}
